<semantic:content>
  <Label id="idTxt" design="Bold" />
  <Table
    id="idCoTable"
    selectionMode="None"
    updateFinished="onUpdateFinished">
    <columns>
      <Column>
        <Label text="Task Worked On"></Label>
      </Column>
      <Column>
        <Label text="Date"></Label>
      </Column>
      <Column>
        <Label text="Task Type" />
      </Column>
      <Column>
        <Label text="Hours"/>
      </Column>
