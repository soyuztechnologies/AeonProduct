<mvc:View
	controllerName="oft.fiori.controller.leaveApproval"
	xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns="sap.m"
	>
 <semantic:FullscreenPage id="page"
	title="Leave Approval"
	floatingFooter="false"
	showNavButton="false"
	navButtonPress="onNavButtonPress"
	>
	<semantic:customHeaderContent>
		<Text id="idUser"> </Text>
		<Button icon="sap-icon://log" text="Logout" type="Emphasized" tooltip="Logout" press="logOutApp"/>
	</semantic:customHeaderContent>
	<semantic:content>
	<VBox>
		<f:SimpleForm
			id="idSFCL"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
	<f:content>
		<Label text="Employees" />
			<ComboBox id="idEmployee" items="{local>/AppUsersCopy}" selectionChange="onSelect">
				<items>
					<core:Item key="{local>TechnicalId}" text="{local>UserName}"/>
				</items>
				</ComboBox>
	</f:content>
</f:SimpleForm>

<IconTabBar
	id="idIconTabBar"
	select="handleIconTabBarSelect"
	class="sapUiResponsiveContentPadding">
	<items>
		<IconTabFilter
			icon="sap-icon://pending"
			id="pendingIcon"
			text="Pending"
			key="Pending" >
			<Toolbar>
				<ToolbarSpacer/>
				  <Button id="refreshId" text="Refresh" press="onRefresh"/>
         </Toolbar>
			<Table id="pendingLeaveTable" headerText="Pending Leaves" updateFinished="onUpdateFinished">
					<columns>
						<Column>
							<Text text="User Name"></Text>
						</Column>
						<Column>
							<Text text="Date FROM and TO"></Text>
						</Column>
						<Column>
							<Text text="Days"></Text>
						</Column>
						<Column>
						</Column>
						<Column>
						</Column>
					</columns>
				</Table>
				</IconTabFilter>

		<IconTabFilter
			icon="sap-icon://paid-leave"
			id="approveIcon"
			text="Approved"
			key="approved" >
			<Toolbar>
				<ToolbarSpacer/>
				  <Button id="refreshId1" text="Refresh" press="onRefresh"/>
         </Toolbar>
			<Table id="approvedLeaveTable" headerText="Approved Leaves" updateFinished="onUpdateFinished">
					<columns>
						<Column>
							<Text text="User Name"></Text>
						</Column>
						<Column>
							<Text text="Date FROM and TO"></Text>
						</Column>
						<Column>
							<Text text="Days"></Text>
						</Column>
						<Column>
						</Column>
						<Column>
						</Column>
					</columns>
				</Table>
				</IconTabFilter>
	</items>
</IconTabBar>
</VBox>
</semantic:content>
</semantic:FullscreenPage>
</mvc:View>
