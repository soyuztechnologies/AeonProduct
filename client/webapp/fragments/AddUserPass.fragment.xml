<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	
    xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Dialog title="Add PassWord" showHeader="true" >
    <f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
        <f:content>
            <VBox >
                <Text text="You May Enter the PassWord Manaualy"></Text>
                <Switch state="false" change="onBlockCustomer"  customTextOn="Yes" customTextOff="No">
                    <layoutData>
                        <FlexItemData growFactor="3" />
                    </layoutData>
                </Switch>
            </VBox>
            <Label text="New PassWord"/>
            <Input value = "{appView>NewPassword}" />
                
            <Label text="Confirm New PassWord"/>
            <Input value = "{appView>conNewPassword}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="OK" type="Accept" press="onSubmit" />
    </beginButton>
    <endButton>
        <Button text="Cancel" type="Reject" press="onRejectPass" />
    </endButton>
    </Dialog>
</core:FragmentDefinition>