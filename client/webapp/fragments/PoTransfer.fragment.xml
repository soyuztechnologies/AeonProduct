<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:custom="ent.ui.ecommerce.controller.controls" xmlns:t="sap.ui.table" xmlns:i="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:grid="sap.ui.layout.cssgrid">

<Dialog titleAlignment="Center" contentWidth="auto" contentHeight="auto" icon="sap-icon://share-2" title="Transfer Sheets from PO: {appView>/selectedPoNo/PoNo} to - {appView>/selectedTransferPo/PoNo}" resizable="false" >
	
	<content>
        <grid:CSSGrid gridTemplateColumns="1fr 1fr" gridGap="1rem">
            <!-- Left Column -->
            <VBox class="sapUiSmallMargin" justifyContent="SpaceBetween">
				<VBox class="sapUiLargeMarginBottom">
					<Title text="PoNo - {appView>/selectedPoNo/PoNo}" level="H6"></Title>
					<Text text="Dimensions - {appView>/selectedPoNo/Height} x {appView>/selectedPoNo/Width}"></Text>
					<HBox justifyContent="End" class="sapUiSmallMarginTop">
						<Text text="Closing Stock - {appView>/selectedPoNo/ClosingStock}" ></Text>
					</HBox>
				</VBox>
                <!-- <TileContent footer="Closing Stock - {appView>/selectedPoNo/ClosingStock}" class="" width="300px">
                    <NewsContent contentText="PoNo - {appView>/selectedPoNo/PoNo}"
                        subheader="Dimensions - {appView>/selectedPoNo/Height} x {appView>/selectedPoNo/Width}" />
                </TileContent> -->

				<VBox class="sapUiLargeMarginTop">
					<Label text="Transfer Sheets from PoNo: {appView>/selectedPoNo/PoNo}" ></Label>
					<Input type="Number" value="{appView>/TransferSheetsAmount/transferFromAmount}" liveChange="onTransferFromAmountChange"></Input>
					<Label text="Transfered Sheets To PoNo: {appView>/selectedTransferPo/PoNo}" class="sapUiSmallMarginTop"></Label> 
					<Input type="Number" value="{appView>/TransferSheetsAmount/transferToAmount}" editable="{= ${appView>/selectedTransferPo} ? true : false}"></Input>
				</VBox>
            </VBox>

            <!-- Right Column -->
            <VBox class="sapUiSmallMargin" height="60vh" width="350px">
               <ScrollContainer vertical="true" horizontal="false" height="100%">
                   <List id="transferPoList" growing="true" growingScrollToLoad="true" sticky="HeaderToolbar" growingThreshold="10" items="{appView>/TransferablePoList}" mode="SingleSelectMaster" itemPress="onTransferPoListPress">
					 <headerToolbar>
						<Toolbar >
							<SearchField liveChange="liveTransferPoSearch" placeholder="Po Search" id="searchTransferPo"></SearchField>
						</Toolbar>
					 </headerToolbar>
                        <items>
                            <custom:customListItem type="Active">
								<VBox class="sapUiTinyMargin">
									<Title text="PoNo - {appView>PoNo}" level="H6"></Title>
									<Text text="Dimensions - {appView>Height} x {appView>Width}"></Text>
									<HBox justifyContent="End" class="sapUiSmallMarginTop">
										<Text text="Closing Stock - {appView>ClosingStock}" ></Text>
									</HBox>
								</VBox>
                            </custom:customListItem>
                        </items>
                   </List>
               </ScrollContainer>
            </VBox>
        </grid:CSSGrid>	
	</content>
	<beginButton>
		<Button text="Transfer" type="Accept" press="onTransferPo" visible="{= ${appView>/TransferablePos}.length > 0 ? true : false}" enabled="true"/>
	</beginButton>
	<endButton>
		<Button text="Cancel" type="Reject" press="onClosePoTransfer" enabled="true"/>
	</endButton>
</Dialog>	

</core:FragmentDefinition>