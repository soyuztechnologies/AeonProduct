<core:FragmentDefinition  xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"
    xmlns:u="sap.ui.unified"	 xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Dialog contentWidth="100%" contentHeight="100%" title="Customer Attachment" id="CustomerAttachment">
        <content>
            <List items="{appView>/CustomerAttachment}">
                <items>
                    <CustomListItem >
                        <Table  popinLayout= 'GridSmall'  autoPopinMode="true" >
                            <!-- <VBox > -->
                            <!-- visibleRowCount="4" selectionMode="Single" -->
                            <columns>
                                <Column width="15%">
                                    <!-- <Label text="Invoice Number" /> -->
                                </Column>
                                <Column>
                                    <!-- <Label text="Attachment" /> -->
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem >
                                    <cells>
                                        <Text text="Invoice No. {appView>InvNo}"></Text>
                                        <!-- <Button  press="PressEdt"  type="Emphasized" icon="sap-icon://show"/> -->
                                        <VBox width="100%">
                                            <ObjectStatus text="Attachment not available" visible="{=${appView>/attachment} ? false : true}" state="Warning"/>
                                            <PDFViewer visible="{=${appView>/attachment} ? true : false}" source="{path: 'appView>attachment', formatter:'.formatter.getBase64ToPdf'}" width="100%" height="600px" />
                                        </VBox>
                                        
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </CustomListItem>
                </items>
            </List>
        </content>
        <!-- <beginButton>
            <Button  text="update" type="Accept" press="press" />
        </beginButton> -->
        <endButton>
            <Button text="Close" type="Reject" press="onRejectCustomerDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>