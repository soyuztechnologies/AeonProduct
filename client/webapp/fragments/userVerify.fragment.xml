<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
    <Dialog title="Set Password"
  
     id="captchaDialog">
    <content>
        <f:SimpleForm id="SimpleFormChange471"
        editable="true"
        layout="ColumnLayout" >
        <f:content>
            <!-- <HBox></HBox> -->
            <Label text="Email" />
            <Input  value="{appView>/userEmail}" editable="false"></Input>

            <Label text="Password" />
            <Input value="{appView>/Pass}" editable="{appView>/PassEdit}" placeholder="Password" ></Input>

            <Label text="Confirm Password" />
            <Input value="{appView>/ConPass}"  placeholder="Confirm Password" editable="{appView>/PassEdit}" ></Input>
            
        </f:content>
    </f:SimpleForm>
    </content>
    <beginButton>
        <Button text="OK" type="Accept" press="onCreateUser" enabled="{appView>/submitEnable}"/>
    </beginButton>
    <endButton>
        <Button text="Cancel" type="Reject" press="onReject" enabled="{appView>/submitEnable}"/>
    </endButton>
</Dialog>		
</core:FragmentDefinition>