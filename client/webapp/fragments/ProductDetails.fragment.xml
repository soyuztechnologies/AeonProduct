<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
   
  
                                <Label text="Job Card No."/>
                                <Input  value = "{appView>jobCardNo}" editable="{appView>/editableFields}"/>
                                <Label text="Name of the Product"/>
                                <Input  value = "{appView>nameOFTheProduct}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Carton Type"/>
                                <Input value = "{appView>cartonType}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Quantity (pcs)"/>
                                <Input value = "{path:'appView>qtyPcs' , formatter: '.formatter.showPcs'}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Paper GSM"/>
                                <Input value = "{path:'appView>PaperGSM' , formatter: '.formatter.showGsm'}" editable="{appView>/editableFields}" />
                    
                                
                                <Label text="Paper Quality"/>
                                <Input value = "{appView>paperQuality}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Printing/Color"/>
                                <Input value = "{appView>color} {appView>printing}" editable="{appView>/editableFields}"/>

                                <!-- <Label text="Color"/>
                                <Input value = "{appView>color}" editable="{appView>/editableFields}"/> -->
                    
                                <Label text="Size (L x W x H)"/>
                                <Input value="{parts:[ {path:'appView>sizeL'}, { path: 'appView>sizeW'}, {path: 'appView>sizeH'} ] ,formatter:'.formatter.sizeFormatter'}" editable="{appView>/editableFields}"/>
                               
                                <Label text="Var. Lmt."/>
                                <Input value = "{appView>varLmt}" editable="{appView>/editableFields}"/>

                                <Label text="Value Addition"/>
                                <Input value = "{appView>effects}" editable="{appView>/editableFields}"/>


                               
                                <Label text="TUCK IN FLAP"/>
                                <Input value = "{appView>tF}" editable="{appView>/editableFields}"/>
                                <Label text="PASTING FLAP"/>
                                <Input value = "{appView>pF}" editable="{appView>/editableFields}"/>
                                
                                
   
</core:FragmentDefinition>