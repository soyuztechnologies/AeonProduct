<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">


    <Dialog contentWidth="100%" contentHeight="100%" title="These jobs have same company" >
        <content>
            <Table items="{path: 'appView>/jobsOfThisCompany'}">
                <columns>
                    <Column>
                        <Label text="JobCard" />
                    </Column>
                    <Column hAlign="Center" >
                        <Label text="Company Name" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem   >
                        <cells>
                            <Text text="{appView>jobCardNo}">
                            </Text>
                            <Text text="{appView>Company/CompanyName}">
                            </Text>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>


        </content>
        <buttons>
            <Button text="Delete" type="Reject" press="onDeleteJobsAndCompany" />
            <Button text="Cancel" type="Emphasized" press="onCancelCompany" />
        </buttons>
    </Dialog>
                                
   
</core:FragmentDefinition>