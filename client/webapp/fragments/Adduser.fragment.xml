<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	 
    xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:core="sap.ui.core">
    <Dialog title="Add User" showHeader="false" >
        <!-- <headerToolbar> -->
            <OverflowToolbar >
                <content>
                    <Title text="Add User" level="H2"/>
                    <ToolbarSpacer />
                    <Switch state="{appview>/PassWordState}" change="onBlockCustomer"  customTextOn="PassWord AutoGenerated" customTextOff="Manual Password">
                        <layoutData>
                            <FlexItemData growFactor="3" />
                        </layoutData>
                    </Switch>
                </content>
            </OverflowToolbar>
        <!-- </headerToolbar> -->
        <VBox tooltip ="USer Company Details">
            <core:Fragment id="idPersonalDetails" fragmentName="ent.ui.ecommerce.fragments.CompanyDetails" type="XML"></core:Fragment>
        </VBox>
        <VBox tooltip="User Personal Details">
            <core:Fragment fragmentName="ent.ui.ecommerce.fragments.PersonDetails" type="XML"></core:Fragment>
        </VBox>
        <VBox tooltip="User Personal Details">
            <core:Fragment fragmentName="ent.ui.ecommerce.fragments.Address" type="XML"></core:Fragment>
        </VBox>
        <!-- <VBox>
            <core:Fragment fragmentName="ent.ui.ecommerce.fragments.Adduser" type="XML"></core:Fragment>
        </VBox> -->
        <beginButton>
            <Button text="OK" type="Accept" press="openPassdialog" />
        </beginButton>
        <endButton>
            <Button text="Cancel" type="Reject" press="onReject" />
        </endButton>
    </Dialog>	
</core:FragmentDefinition>