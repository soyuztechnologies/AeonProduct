<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form">
    <Table items="{appView>/jobStatusTabData}"  autoPopinMode="true">
        <headerToolbar>
           <Toolbar>
               <Title text="Job Status" />
               <ToolbarSpacer/>
               <Button
                   visible="{appView>/addJobStatusVis}"
                   icon="sap-icon://add"
                   press="onPressAdd"
               >   
               </Button>

           </Toolbar>
        </headerToolbar>
        <!-- visibleRowCount="4" selectionMode="Single" -->
        <columns>
           <Column> 
                 <Label text="Raw Material" />
                  <Select id="idRawMaterial" selectedKey="instock">
			    	<items>
						<core:Item text="In Stock" key="instock" />
						<core:Item text="Pending" key="pending" />
					</items>
				 </Select>
           </Column>
           <Column>
                 <Label text="Coating" />

           </Column>
           <Column>
               <Label text="Spot UV" />
           </Column>
           <Column>
               <Label text="Punching" />
           </Column>
           <Column>
               <Label text="Packing" />
           </Column>
           <Column>
               <Label text="Printing" />
           </Column>
           <Column>
               <Label text="Foiling" />
           </Column>
           <Column>
               <Label text="Embossing" />
           </Column>
           <Column>
               <Label text="Pasting" />
           </Column>
           <Column>
               <Label text="Inc. No." />
           </Column>		
           <Column>
               <Label text="Delivery No." />
           </Column>				
        </columns>
           <items>
               <ColumnListItem >
                   <cells>
                       <Input editable="{appView>/onClickModify}" value="{appView>JobStatusId}"></Input> 
                       <Input editable="{appView>/onClickModify}" value="{appView>Coating}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>spotUV}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>Punching}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>Packing}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>Printing}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>Foiling}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>Embossing}"></Input>
                       <Input editable="{appView>/onClickModify}" value="{appView>Pasting}"></Input>
                       <Link  press="onClickPopup"  text="{appView>InvNo}" ></Link>
                       <Link  press="onClickPopup"  text="{appView>DeliveryNo}" ></Link>				
                   </cells>
               </ColumnListItem>
           </items>
         
   </Table>
</core:FragmentDefinition>