<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form">
    <Table items="{path: 'appView>/newJobStatus'}" popinLayout= 'GridSmall'  autoPopinMode="true">
        <headerToolbar>
            <Toolbar>
                <Title text="Job Status" />
                <ToolbarSpacer/>
                <Button
                   visible="{=${appView>/Jobs/status}  ? ${appView>/addBtnVisible} : false }"
                   icon="sap-icon://add"
                   press="onPressAdd"
               >   
               </Button>
            </Toolbar>
        </headerToolbar>
        <!-- visibleRowCount="4" selectionMode="Single" -->
        <columns>
            <Column>
                <Label text="Raw Material" />
            </Column>
            <Column>
                <Label text="Coating" />
            </Column>
            <Column>
                <Label text="Spot UV" />
            </Column>
            <Column>
                <Label text="Punching" />
            </Column>
            <Column>
                <Label text="Packing" />
            </Column>
            <Column>
                <Label text="Printing" />
            </Column>
            <Column>
                <Label text="Foiling" />
            </Column>
            <Column>
                <Label text="Embossing" />
            </Column>
            <Column>
                <Label text="Pasting" />
            </Column>
            <Column>
                <Label text="Inc. No." />
            </Column>
            <Column>
                <Label text="Delivery No." />
            </Column>
            <Column>
                <Label text="Edit Entry" />
            </Column>
        </columns>
        <items>
            <ColumnListItem >
                <cells>
                    <Select editable="{appView>/onClickModify}" forceSelection="false" selectedKey="{appView>rawMaterial}" change="onSelectKeyRawMaterial">
                        <items>
                            <core:Item text="In Stock" key="In Stock" />
                            <core:Item text="Pending" key="Pending" />
                        </items>
                    </Select>
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>Coating}" />
                    <!-- <StepInput  editable="{appView>/onClickModify}" value="path: 'appView>Coating',formatter:''" min="0" max="100" step="1" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>spotUV}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>spotUV}" min="0" max="100" step="2" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>Punching}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>Punching}" min="0" max="100" step="3" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>Packing}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>Packing}" min="0" max="100" step="4" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" liveChange="onLiveChange" editable="{appView>/onClickModify}" value="{appView>Printing}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>Printing}" min="0" max="100" step="5" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>Foiling}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>Foiling}" min="0" max="100" step="6" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>Embossing}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>Embossing}" min="0" max="100"  step="7" validationMode="LiveChange" textAlign="Center"/> -->
                    <Input type="Number" editable="{appView>/onClickModify}" value="{appView>Pasting}"></Input>
                    <!-- <StepInput editable="{appView>/onClickModify}" value="{appView>Pasting}" min="0" max="100" step="8" validationMode="LiveChange" textAlign="Center"/> -->
                    <Link  press="onClickPopup"  text="{appView>InvNo}" ></Link>
                    <!-- <StepInput value="{appView>InvNo}" min="0" max="100"/> -->
                    <Link  press="onClickPopup"  text="{appView>DeliveryNo}" ></Link>
                    <Button press="editJobstatusEntry" type="Emphasized" text="Edit"/>
                    <!-- <StepInput value="{appView>DeliveryNo}" min="0" max="100"/> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>