<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form">
    <Table items="{appView>/jobStatusTabData}"  autoPopinMode="true">
        <headerToolbar>
            <Toolbar>
                <Title text="Job Status" />
                <ToolbarSpacer/>
                <Button
                   visible="{=${appView>/Jobs/status} !== 'New' ? true : false }"
                   icon="sap-icon://add"
                   press="onPressAdd"
               >   
               </Button>
            </Toolbar>
        </headerToolbar>
        <!-- visibleRowCount="4" selectionMode="Single" -->
        <columns>
            <Column>
                <Label text="Raw Material" />
            </Column>
            <Column>
                <Label text="Coating" />
            </Column>
            <Column>
                <Label text="Spot UV" />
            </Column>
            <Column>
                <Label text="Punching" />
            </Column>
            <Column>
                <Label text="Packing" />
            </Column>
            <Column>
                <Label text="Printing" />
            </Column>
            <Column>
                <Label text="Foiling" />
            </Column>
            <Column>
                <Label text="Embossing" />
            </Column>
            <Column>
                <Label text="Pasting" />
            </Column>
            <Column>
                <Label text="Inc. No." />
            </Column>
            <Column>
                <Label text="Delivery No." />
            </Column>
        </columns>
        <items>
            <ColumnListItem >
                <cells>
                    <Input editable="{appView>/onClickModify}" value="{appView>rawMaterial}"></Input>
                    <Input editable="{appView>/onClickModify}" value="{appView>Coating}" />
                    <!-- <StepInput  value="{appView>Coating}" min="0" max="100" step="1" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>spotUV}"></Input>
                    <!-- <StepInput value="{appView>spotUV}" min="0" max="100" step="2" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>Punching}"></Input>
                    <!-- <StepInput value="{appView>Punching}" min="0" max="100" step="3" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>Packing}"></Input>
                    <!-- <StepInput value="{appView>Packing}" min="0" max="100" step="4" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>Printing}"></Input>
                    <!-- <StepInput value="{appView>Printing}" min="0" max="100" step="5" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>Foiling}"></Input>
                    <!-- <StepInput value="{appView>Foiling}" min="0" max="100" step="6" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>Embossing}"></Input>
                    <!-- <StepInput value="{appView>Embossing}" min="0" max="100"  step="7" validationMode="LiveChange"/> -->
                    <Input editable="{appView>/onClickModify}" value="{appView>Pasting}"></Input>
                    <!-- <StepInput value="{appView>Pasting}" min="0" max="100" step="8" validationMode="LiveChange"/> -->
                    <Link  press="onClickPopup"  text="{appView>InvNo}" ></Link>
                    <!-- <StepInput value="{appView>InvNo}" min="0" max="100"/> -->
                    <Link  press="onClickPopup"  text="{appView>DeliveryNo}" ></Link>
                    <!-- <StepInput value="{appView>DeliveryNo}" min="0" max="100"/> -->
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>