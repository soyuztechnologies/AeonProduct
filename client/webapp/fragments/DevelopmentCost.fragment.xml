<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
   
  
    <Label text="Plate Charges"/>
    <Input value="{path: 'appView>plateCharges',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}"/>

    <Label text="Pantone Inks"/>
    <Input value = "{path :'appView>pantoneInks',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}"/>

    <Label text="Blanket Charges"/>
    <Input value = "{path:'appView>blanketCharges',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}"/>

    <Label text="Foil Blocks"/>
    <Input value = "{path:'appView>foilBlocks',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}"/>
    
    <Label text="Positive"/>
    <Input value = "{path: 'appView>positive',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}"/>

    <Label text="Emboss Block"/>
    <Input value = "{path:'appView>embossBlock',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}"/>

    <Label text="Punch"/>
    <Input value = "{path:'appView>punch',formatter: '.formatter.decimalFormatterWithRupee'}" editable="{appView>/editableFields}" />
    <Label  design="Bold" text="Total" />
    <Text text="{path:'appView>total',formatter: '.formatter.decimalFormatterWithRupee'}" />
   
</core:FragmentDefinition>