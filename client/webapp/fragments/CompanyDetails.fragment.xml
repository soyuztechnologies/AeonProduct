<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <form:SimpleForm maxContainerCols="2" id="companySimpleFrom" editable="false" layout="ColumnLayout" labelSpanL="12" labelSpanM="12" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
        <form:content>
            <Label required="true" text="Mail Address"/>
            <Input value = "{appView>CompanyEmail}" />
            <Label required="true" text="Company Name"/>
            <Input value = "{appView>CompanyName}" />
            <Label text="Gst Number"/>
            <Input value = "{appView>GSTNO}" />
            <Label required="true" text="Company Address"/>
            <Input value = "{appView>CompanyAddress}" />
            <Label text="Website"/>
            <Input value = "{appView>Website}" />
            <Label required="true" text="Company Phone Number"/>
            <Input value = "{appView>email}"/>
            <Label required="true" text="Decceide Role"/>
            <Select selectedKey="{appView>Role}">
                <core:Item key="Customer" text="Customer" />
                <core:Item key="Admin" text="Admin" />
                <core:Item key="Factory Manager" text="Factory Manager" />
            </Select>
        </form:content>
    </form:SimpleForm>
</core:FragmentDefinition>