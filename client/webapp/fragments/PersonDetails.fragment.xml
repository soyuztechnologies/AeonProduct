<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <!-- <Dialog > -->
    <form:SimpleForm maxContainerCols="2" id="personDetails" editable="false" layout="ColumnLayout" labelSpanL="12" labelSpanM="12" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
        <form:content>
            <Label required="true" text="Title"/>
            <Select selectedKey="{appView>Title}">
                <core:Item key="Mr." text="Mr." />
                <core:Item key="Mrs." text="Mrs." />
            </Select>
            <Label required="true" text="First Name"/>
            <Input value = "{appView>FirstName}" />
            <Label required="true" text="Last Name"/>
            <Input value = "{appView>LastName}" />
            <!-- <Label text="Office Phone Number"/>
            <Input value = "" /> -->
            <Label text="Company Logo"/>
            <Input value = "{appView>CompanyLogo}"/>
            <Label required="true" text="Personal Mail Address"/>
            <Input value = "{appView>EmailId}" />
        </form:content>
    </form:SimpleForm>
    <!-- </Dialog>	 -->
</core:FragmentDefinition>