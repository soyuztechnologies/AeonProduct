<mvc:View controllerName="ent.ui.ecommerce.controller.Carborator"
    xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"  
    xmlns:core.h="sap.ui.core.HTML"  
    xmlns="sap.m"
    xmlns:ux="sap.uxap">
    <Page enableScrolling="false"  showHeader="{appView>/visibleHeader}" id="SimpleForm-1">
        <content>

            <TextArea visible="false" id="_IDGenTextArea1" rows="30" cols="60" value="{appView>/jsonValue}"></TextArea>
            <HBox direction="{=${appView>/desktop} ? 'Row' : 'Column'}" alignItems="Center" alignContent="Center" justifyContent="Center" class="sapUiSmallMarginTop">
                <ComboBox   items="{appView>/userDetails}" id="idPopinLayout"
                    placeholder="Select User"
                    change="onPopinLayoutChanged"
                    class="sapUiTinyMarginEnd">
                    <items>
                        <core:Item enabled="true"  text="{appView>UserName}"
                            key="{appView>id}"/>
                    </items>
                </ComboBox>
                    <u:FileUploader
                    id="fileUploader"
                    class="sapUiTinyMarginBegin"
                    change="onFileUploaddChange"
                    icon="sap-icon://browse-folder"
                    buttonText="Browse"
                    fileType="xml,xlsx"
                    multiple="false" />  
                </HBox>
                <MessageStrip
                visible="{appView>/messageStripVis}"
				text="Same Job is already available"
				type="Information"
				showIcon="true"
				class="sapUiMediumMarginBottom">
			</MessageStrip>
            <ux:ObjectPageLayout id="ObjectPageLayout" showAnchorBarPopover="false" showTitleInHeaderContent="true" preserveHeaderStateOnScroll="true"  isChildPage="true" upperCaseAnchorBar="false">
                
        <ux:headerTitle>
            
            <ux:ObjectPageDynamicHeaderTitle expandedContent="false">
                
            
            </ux:ObjectPageDynamicHeaderTitle>
        </ux:headerTitle>
        <ux:ObjectPageSection title="Product Details">
            <ux:subSections  >
                <ux:ObjectPageSubSection>
                    <ux:blocks>
                        <f:SimpleForm  layout="ColumnLayout"  columnsL="3" singleContainerFullSize="false">
                            <f:content >
                                <Label text="Name of the Product"/>
                                <Input  value = "{appView>nameOFTheProduct}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Carton Type"/>
                                <Input value = "{appView>cartonType}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Quantity (pcs)"/>
                                <Input value = "{appView>qtyPcs}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Paper GSM"/>
                                <Input value = "{appView>PaperGSM}" editable="{appView>/editableFields}" />
                    
                                
                                <Label text="Paper Quality"/>
                                <Input value = "{appView>paperQuality}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Printing"/>
                                <Input value = "{appView>printing}" editable="{appView>/editableFields}"/>

                                <Label text="Color"/>
                                <Input value = "{appView>color}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Size (L x W x H)"/>
                                <Input value="{parts:[ {path:'appView>sizeL'}, { path: 'appView>sizeW'}, {path: 'appView>sizeH'} ] ,formatter:'.formatter.sizeFormatter'}" editable="{appView>/editableFields}"/>
                               
                                <Label text="Var. Lmt."/>
                                <Input value = "{appView>varLmt}" editable="{appView>/editableFields}"/>

                                <Label text="Effects"/>
                                <Input value = "{appView>effects}" editable="{appView>/editableFields}"/>


                                <Label text="Lock"/>
                                <Input value = "{appView>lock}" editable="{appView>/editableFields}"/>
                                <Label text="TF"/>
                                <Input value = "{appView>tF}" editable="{appView>/editableFields}"/>
                                <Label text="PF"/>
                                <Input value = "{appView>pF}" editable="{appView>/editableFields}"/>
                                <Label text="Double Cut"/>
                                <Input value = "{appView>doubleCut}" editable="{appView>/editableFields}"/>
                                <Label text="Trin in TF"/>
                                <Input value = "{appView>trimTF}" editable="{appView>/editableFields}"/>
                                
                                
                            </f:content>
                        </f:SimpleForm>
                    </ux:blocks>
                </ux:ObjectPageSubSection>
            </ux:subSections>
        </ux:ObjectPageSection>

        <ux:ObjectPageSection title="Paper and Layouts">
            <ux:subSections>
                <ux:ObjectPageSubSection>
                    <ux:blocks>
                        <f:SimpleForm editable="false" layout="ColumnLayout"  columnsL="3" singleContainerFullSize="false" >
                            <f:content>
                                <Label text="No of Ups"/>
                                <!-- ="{parts:[ {path:'appView>noOfUps-1'}, { path: 'appView>noOfUps-2'}, {path: 'appView>noOfUps-3'} ] ,formatter:'.formatter.sizeFormatter'}" -->
                                <Input value="{parts:[ {path:'appView>noOfUps-1'}, { path: 'appView>noOfUps-2'}, {path: 'appView>noOfUps-3'} ] ,formatter:'.formatter.sizeFormatter'}" editable="{appView>/editableFields}"/>
                    
                                <Label text="No of Sheets"/>
                                <Input value = "{appView>noOfSheets-1}" editable="{appView>/editableFields}"/>

                                <Label text="Printing Sheet Size"/>
                                <Input value = "{appView>printingSheetSizeL1} x {appView>printingSheetSizeW1}" editable="{appView>/editableFields}"/>

                                <Label text="Procured Sheets"/>
                                <Input value = "{appView>noOfSheets-2}" editable="{appView>/editableFields}"/>
                                
                                <Label text="Procured Sheet Size"/>
                                <Input value = "{appView>printingSheetSizeL2} x {appView>printingSheetSizeW2}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Wastage"/>
                                <Input value = "{appView>wastage}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Weight in Kgs"/>
                                <Input value = "{appView>wtKgs}" editable="{appView>/editableFields}" />
                    
                            </f:content>
                        </f:SimpleForm>
                    </ux:blocks>
                </ux:ObjectPageSubSection>
            </ux:subSections>
        </ux:ObjectPageSection>

        <ux:ObjectPageSection title="Machine Details">
            <ux:subSections>
                <ux:ObjectPageSubSection>
                    <ux:blocks>
                        <f:SimpleForm editable="false" layout="ColumnLayout"  columnsL="3" singleContainerFullSize="false" >
                            <f:content>
                                <Label text="Printing Machine"/>
                                <Input value = "{appView>printingMachine}" editable="{appView>/editableFields}"/>
                    
                                <Label text="Punching Machine"/>
                                <Input value = "{appView>punchingMachine}" editable="{appView>/editableFields}"/>

                                <Label text="Pasting Machine"/>
                                <Input value = "{appView>pastingMachine}" editable="{appView>/editableFields}"/>

                                <!-- <Label text="Old"/>
                                <Input value = "{appView>noOfSheets-2}" editable="{appView>/editableFields}"/>
                                
                                <Label text="Ref."/>
