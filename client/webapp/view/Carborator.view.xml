                    </Column>
                </columns>
                <items>
                    <ColumnListItem highlight="{= ${appView>operation} === 'N' ? 'Information' : ${appView>operation} === 'U' ? 'Warning' :${appView>operation} === 'R' ? 'Success' : 'Information'}" detailPress="onGetDialog" type="DetailAndActive">
                        <cells>
                            <Text text="{appView>fileName}">
                            </Text>
                            <ComboBox   items="{appView>/customerUser}" id="idPopinLayout"
                                placeholder="Company Name"
                                change="onPopinLayoutChanged"
                                class="sapUiTinyMarginEnd">
                                <items>
                                    <core:Item enabled="true"  text="{appView>UserName}"
                                        key="{appView>id}"/>
                                </items>
                            </ComboBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
