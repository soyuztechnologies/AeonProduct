<mvc:View controllerName="ent.ui.ecommerce.controller.userDetails"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page showHeader="false">
		<Table items="{appView>/userDetails}" id="idProductsTable" sticky="HeaderToolbar,ColumnHeaders" itemPress="rowItemsPressUser">
			<headerToolbar>
				<OverflowToolbar >
					<content>
						<Title text="User Details" level="H2"/>
						<ToolbarSpacer />
						<Button  type="Emphasized" icon="sap-icon://refresh" press="getUserData"></Button>
						<Button text="Add" type="Emphasized" icon="sap-icon://add" press="AddUserDialog"/>
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column width="12em">
					<Text text="Name" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Email" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Role" />
				</Column>
		
				<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
					<Text text="Blocked" />
				</Column>
				<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
					<Text text="Approval" />
				</Column>
				<Column hAlign="End">
					<Text text="Reset Password" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Active">
					<cells>
						<Text text="{appView>UserName}" />
						<Text text="{appView>EmailId}" />
						<Text text="{appView>Role}" />
						<Switch state="{=${appView>Blocked} === 'Yes' ? true : false}" change="onBlockCustomer" type="AcceptReject" customTextOn="Yes" customTextOff="No">
							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</Switch>
						<Select selectedKey="{appView>Status}"  forceSelection="false" change="onApproveCustomer">
							<core:Item text="Pending" key="Pending" />
							<core:Item text="Reject" key="Reject" />
							<core:Item text="Approved" key="Approved" />
						</Select>
						<Button type="Accept"  press="SendEmailExistUser" icon="sap-icon://email"></Button>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<!-- <footer>
			<Toolbar >   
					<ToolbarSpacer/>
					<Button type="Emphasized" text="Save" press="onSavePayload"></Button>
					<Button type="Reject" text="Clear" press="onPressClear"></Button>
			</Toolbar>
		</footer> -->
	</Page>
</mvc:View>