<mvc:View controllerName="ent.ui.ecommerce.controller.App" displayBlock="false" height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:tnt="sap.tnt">
    <tnt:ToolPage sideExpanded="{appView>/sideNavExpended}">
        
        <tnt:header >
            <tnt:ToolHeader  visible="true">
                   <Button visible="{appView>/hamburgerVisibility}"
                    press="onClickMenuButton"
                   icon="sap-icon://menu2">

                   </Button>
                   <Image src="logo/logo.png" width="4%"/>
                   <Title text="Aeon Products"></Title>
                   <ToolbarSpacer/>
                   <Button press="onMenuButtonPress" icon="sap-icon://account" class="sapUiSmallMarginEnd"  visible="{appView>/logoutVisibility}"/>
                   <Menu itemSelected ="onMenuPress"  id="logOutMenu">
                     <items>
                            <MenuItem key="User" text="User" icon="sap-icon://person-placeholder" />
                            <MenuItem key="Home" text="Home" icon="sap-icon://home" />
                            <MenuItem key="Logout" text="Logout" icon="sap-icon://log" press="onPressLogout" />
                     </items>
                   </Menu>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:mainContents>
                <f:FlexibleColumnLayout id="layout" layout="{appView>/layout}" backgroundDesign="Translucent" beginColumnNavigate="onNavigation" />
        </tnt:mainContents>

        <tnt:sideContent>
            <tnt:SideNavigation bindingContexts="true"  expanded="{appView>/sideNavExpended}" id="sideNavigation" visible="{appView>/visibility}"  itemSelect="onSelectItem">
                <tnt:NavigationList>
                    <tnt:NavigationListItem visible="{appView>/upDocNavVisb}" text="Upload Documents" icon="sap-icon://upload"  key="UploadXml"/>
                    <tnt:NavigationListItem visible="{appView>/welPrintNavVisb}" text="All Printers" icon="sap-icon://business-card" key="allPrinters"/>
                    <tnt:NavigationListItem visible="{appView>/useDeltNavVisb}" text="User Details" icon="sap-icon://family-care" key="userDetails"/>
                    <tnt:NavigationListItem visible="{appView>/profilNavVisb}" text="Profile" icon="sap-icon://customer" key="Profile"/>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

    </tnt:ToolPage>
</mvc:View>