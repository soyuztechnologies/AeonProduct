<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form" controllerName="ent.ui.ecommerce.controller.printingDetails">
	<Page title="Job Details"> 
		<f:SimpleForm title="O79 JNM RPRNT DCLRS 2D 04" id="jobDetails" editable="true" layout="ResponsiveGridLayout"  >
				<f:content>
					<!-- <VBox> -->
						<core:Title></core:Title>

						<Label text="PO NO"></Label>
						<Link  press="onClickPopup"  text="{appView>poNo}" ></Link>

						<Label text="Quantity"></Label>
						<Input editable="false" value="{appView>qtyPcs}"></Input>

						<Label text="Size in mm"></Label>
						<Input editable="false" value="{path: 'appView>sizeL', formatter: '.sizeFormatter'} x {path: 'appView>sizeW', formatter: '.sizeFormatter'} x {path: 'appView>sizeH', formatter: '.sizeFormatter'}"></Input>
					<!-- </VBox> -->
					<!-- <VBox> -->
						<core:Title></core:Title>

						<Label text="Artwork"></Label>
						<Link press="onClickPopupArt" text="{appView>artworkCode}"></Link>

						<Label text="Paper Board"></Label>
						<Input editable="false" value="{appView>artworkCode} / {appView>printing}"></Input>

						<Label text="Coating"></Label>
						<Input editable="false" value="{appView>PaperGSM}"></Input>
					<!-- </VBox> -->
				</f:content>
		</f:SimpleForm>
       <Table   autoPopinMode="true">
		 <headerToolbar>
			<Toolbar>
				<Title text="Job Status" />
			</Toolbar>
		 </headerToolbar>
		 <!-- visibleRowCount="4" selectionMode="Single" -->
	     <columns>
			<Column> 
				  <Label text="Raw Material" />
			</Column>
			<Column>
				  <Label text="Coating" />

			</Column>
			<Column>
				<Label text="Spot UV" />
			</Column>
			<Column>
				<Label text="Punching" />
			</Column>
			<Column>
				<Label text="Packing" />
			</Column>
			<Column>
				<Label text="Printing" />
			</Column>
			<Column>
				<Label text="Foiling" />
			</Column>
			<Column>
				<Label text="Embossing" />
			</Column>
			<Column>
				<Label text="Pasting" />
			</Column>
			<Column>
				<Label text="Inc. No." />
			</Column>		
			<Column>
				<Label text="Delivery No." />
			</Column>				
		 </columns>
		    <items>
				<ColumnListItem >
					<cells>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/rawMaterial}"></Input> 
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Coating}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/spotUV}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Punching}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Packing}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Printing}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Foiling}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Embossing}"></Input>
						<Input editable="{appView>/onClickModify}" value="{appView>/jobStatusTabData/Pasting}"></Input>
						<Link  press="onClickPopup"  text="{appView>/jobStatusTabData/InvNo}" ></Link>
						<Link  press="onClickPopup"  text="{appView>/jobStatusTabData/DeliveryNo}" ></Link>				
					</cells>
				</ColumnListItem>
		    </items>
		  
	</Table>
	
			<!-- <footer>
			<Toolbar>
				<Button visible="{appView>/updBtnVisibility}"  text="Update" press="onClickUpdate"></Button>
				<ToolbarSpacer />
				<Button text="Modify" press="onClickModify"></Button>
			</Toolbar>
			</footer> -->
		<footer>
			<Toolbar>
				<Button visible="{appView>/updBtnVisibility}"  icon="sap-icon://synchronize" type="Emphasized" text="Update" press="onClickUpdate"></Button>
				<ToolbarSpacer />
				<Button  icon="sap-icon://customize" text="Modify"  type="Emphasized" press="onClickModify"></Button>
			</Toolbar>
		</footer>
		<!-- </VBox> -->
	</Page>
</mvc:View>
