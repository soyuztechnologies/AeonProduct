<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form" controllerName="ent.ui.ecommerce.controller.printingDetails">
	<Page showHeader="false"> 
	<!-- <Button text="Start Production" press="whenProductionStart"/> -->
        <Toolbar>
          <Title text="Job Details" />
          <ToolbarSpacer/>
          <Button
		  	id=""
		    visible="{=${appView>/Jobs/status} === 'New' ? true : false }"
            text="Start Production"
			type="Emphasized"
            press="whenProductionStart"
          >   
          </Button>
		  <Button
		  tooltip="Job Details"
		  icon="sap-icon://form"
		  press="allJobDialog"
	  >   
	  </Button>

        </Toolbar>
		<f:SimpleForm title="{appView>nameOFTheProduct}" id="jobDetails" editable="true" layout="ColumnLayout"  columnsM="2" >
				<f:content>
					

						<Label text="PO NO"></Label>
						<Link  press="onClickPopup"  text="{appView>poNo}" ></Link>

						<Label text="Quantity"></Label>
						<Input editable="false" value="{appView>qtyPcs}"></Input>

						<Label text="Size in mm"></Label>
						<!-- "{path: 'appView>sizeL', formatter: '.formatter.sizeFormatter'} x {path: 'appView>sizeW', formatter: '.formatter.sizeFormatter'} x {path: 'appView>sizeH', formatter: '.formatter.sizeFormatter'}" -->
						<Input editable="false" value="{parts:[ {path:'appView>sizeL'}, { path: 'appView>sizeW'}, {path: 'appView>sizeH'} ] ,formatter:'.formatter.sizeFormatter'}"></Input>
	
						<Label text="Artwork"></Label>
						<Link press="onClickPopup" text="{appView>artworkCode}"></Link>
						<Label text="Paper Board"></Label>
						<Input editable="false" value="{appView>artworkCode} + {appView>color}"></Input>

						<Label text="Coating"></Label>
						<Input editable="false" value="{appView>PaperGSM}"></Input>
					<!-- </VBox> -->
				</f:content>
		</f:SimpleForm>
		<core:Fragment fragmentName="ent.ui.ecommerce.fragments.Jobstatus" type="XML"></core:Fragment>
		<footer>
			<Toolbar>
			<ToolbarSpacer/>
				<Button visible="{appView>/updBtnVisibility}"  icon="sap-icon://save" type="Emphasized" text="Save" press="onClickUpdate"></Button>
				<Button visible="{appView>/asUrgentVis}"  icon="sap-icon://save" type="Emphasized" text="Make As Urgent" press="onClickUrgent"></Button>
				<Button visible="{=${appView>/Jobs/status} !== 'New' ? ${appView>/visibleModify} : false }" icon="sap-icon://customize" text="Modify"  type="Emphasized" press="onModify"></Button>
				<Button visible="{appView>/cancleBtnVis}" icon="sap-icon://cancel" text="Cancel"  type="Emphasized" press="onClickCancle"></Button>
			</Toolbar>
		</footer>
		<!-- </VBox> -->
	</Page>
</mvc:View>
