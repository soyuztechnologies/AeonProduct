<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="ent.ui.ecommerce.controller.printingDetails">
	<Page title="Job Details"> 
          <!-- <headerContent></headerContent> -->
		<!-- <VBox class="sapUiSmallMargin"> -->
			<f:SimpleForm title="O79 JNM RPRNT DCLRS 2D 04" id="SimpleForm-1" editable="true" layout="ResponsiveGridLayout"  >
				<f:content>
					<!-- <VBox> -->
						<core:Title></core:Title>

						<Label text="PO NO"></Label>
						<Link  press="onClickPopup"  text="{appView>poNo}" ></Link>

						<Label text="Quantity"></Label>
						<Input editable="false" value="{appView>qtyPcs}"></Input>

						<Label text="Size in mm"></Label>
						<Input editable="false" value="{path: 'appView>sizeL', formatter: '.sizeFormatter'} x {path: 'appView>sizeW', formatter: '.sizeFormatter'} x {path: 'appView>sizeH', formatter: '.sizeFormatter'}"></Input>
					<!-- </VBox> -->
					<!-- <VBox> -->
						<core:Title></core:Title>

						<Label text="Artwork"></Label>
						<Link press="onClickPopup" text="{appView>artworkCode}"></Link>

						<Label text="Paper Board"></Label>
						<Input editable="false" value="{appView>paperboard}"></Input>

						<Label text="Coating"></Label>
						<Input editable="false" value="{appView>coating}"></Input>
					<!-- </VBox> -->
				</f:content>
			</f:SimpleForm>
			<f:SimpleForm title="Job Status" id="SimpleForm2" editable="true" layout="ResponsiveGridLayout" >
				<f:content>
						<Label text="Raw Material"></Label>	
						<Input editable="false" value="{appView>poNo}"></Input>

						<Label text="Coating"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>coating}"></Input>

						<Label text="Spot UV"></Label>
						<Input editable="{appView>/inputEditable}"  value="{appView>spotuv}"></Input>

						<Label text="Punching"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>punching}"></Input>

						<Label text="Packing"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>packing}"></Input>

						<Label text="Printing"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>printing}"></Input>

						<Label text="Foiling"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>foiling}"></Input>

						<Label text="Embossing"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>embossing}"></Input>

						<Label text="Pasting"></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>pasting}"></Input>

						<Label text="Inc. No."></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>incno}"></Input>

						<Label text="Delivery No."></Label>
						<Input editable="{appView>/inputEditable}" value="{appView>deliveryno}"></Input>
					<!-- </VBox> -->
				</f:content>
			</f:SimpleForm>
			<Toolbar>
				<Button text="Update" press="onClickUpdate"></Button>
				<ToolbarSpacer />
				<Button text="Modify" press="onClickModify"></Button>
			</Toolbar>
		<!-- </VBox> -->
	</Page>
</mvc:View>
